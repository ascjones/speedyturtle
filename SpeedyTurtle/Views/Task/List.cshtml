@model IEnumerable<SpeedyTurtle.Models.UserTask>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<table class="table table-hover">

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Title, "Details", new { id = item.Id }) <!-- todo: style the rows so the links are not underlined -->
        </td>
        <td>
            @Html.ActionLink(item.Description, "Details", new { id = item.Id })
        </td>
    </tr>
}

</table>
