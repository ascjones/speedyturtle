@using SpeedyTurtle.Models
@model IEnumerable<SpeedyTurtle.Models.UserTask>

@{
    ViewBag.Title = "Your Pending Tasks";
}

@if (ViewBag.UserType == UserType.Seeker)
{
    <h3>Your Pending Tasks</h3>
}
else
{
    <h3>Do some tasks!</h3>
}

<table class="table table-hover">

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.ActionLink(item.Title, "Details", new { id = item.Id }) <!-- todo: style the rows so the links are not underlined -->
        </td>
        <td>
            @Html.ActionLink(item.Description, "Details", new { id = item.Id })
        </td>
    </tr>
}

</table>
