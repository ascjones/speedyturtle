@model SpeedyTurtle.Models.UserTask

@{
    ViewBag.Title = "Submit a Task";
}

<legend>Tell us what you want doing</legend>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Submit", "Task", FormMethod.Post, new {@class = ""})) {
    <div class="control-group">
        <div></div>
        <div class="controls">
            @Html.TextBoxFor(model => model.Title, new {style = "width: 600px"})
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="controls">
            @Html.LabelFor(model => model.Description, "Details")
            @Html.TextAreaFor(model => model.Description, new { style = "width: 600px; height : 200px" })
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <div class="controls">
            @Html.LabelFor(model => model.MaximumOffer, "Maximum offer")
            <div class="input-prepend">
                <span class="add-on">R</span>
                @Html.TextBoxFor(model => model.MaximumOffer, new {@class="input-small"})
            </div>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <input type="submit" value="Submit" class="btn btn-large btn-success" />
        </div>
    </div>
}
