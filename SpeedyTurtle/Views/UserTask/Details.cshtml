@model SpeedyTurtle.Models.ViewModels.UserTaskViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Task Details</h2>

<fieldset>
    <legend>Task</legend>

    <div class="display-label">Title</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Title)
    </div>

    <div class="display-label">Description</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>
</fieldset>

@if (Model.Bids.Any())
{
    <table>
        <tr>
            <th>
                Agent
            </th>
            <th>
                Amount
            </th>
            <th></th>
        </tr>

        @foreach (var bid in Model.Bids)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => bid.AgentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => bid.Amount)
                </td>
                <td>
                    <!-- todo: [AJ] view/accept? -->
                    @Html.ActionLink("Accept this bid", "AcceptBid", "Bid", new {bidId = bid.Id}, null)
                </td>
            </tr>
        }

    </table>
}

<p>
    @Html.ActionLink("Back to List", "List")
</p>
